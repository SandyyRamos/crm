<div class="container mt-5 bg-light p-5 rounded shadow-sm">
  <h1 class="text-center mb-4">Nuevo Prospecto</h1>

  <%= simple_form_for @lead, html: { class: "mx-auto", style: "max-width: 600px;" } do |form| %>
    <div class="form-group">
      <%= form.input :name, label: "Nombre", input_html: { class: "form-control" }, required: false %>
    </div>

    <div class="form-group">
      <%= form.input :email, label: "Email", input_html: { class: "form-control" }, required: false %>
    </div>

    <div class="form-group">
      <%= form.input :phone, label: "Teléfono", input_html: { class: "form-control" }, required: false %>
    </div>

    <div class="form-group mt-3">
      <%= form.submit @lead.new_record? ? "Crear" : "Editar", class: 'btn btn-success btn-block' %>
    </div>
  <% end %>
</div>

