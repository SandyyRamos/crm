<div class="container sticky-top bg-white">
  <h2 class="mt-5"><strong><%= @lead.name %></strong></h2>
  <p class="m-2">Email: <%= @lead.email %></p>

  <div class="d-flex justify-content-between mb-2">
    <h4>Conversaciones</h4>
    <%= link_to "Volver", leads_path, class: "btn btn-secondary" %>
  </div>

  <%= simple_form_for [@lead, @conversation], html: { class: 'form-horizontal' } do |form| %>
    <div class="form-group mb-3">
      <%= form.input :detail, as: :text, rows: 5, input_html: { class: 'form-control' }, label: false %>
    </div>

    <div class="form-group">
      <%= form.submit "Subir información", class: "btn btn-success mb-3" %>
    </div>
  <% end %>
</div>

<div class="container">
  <ul>
    <%= render @conversations %>
  </ul>
</div>






