<h1><%= @lead.name %>
<p>Email: <%= @lead.email %></p>
<p>Status: <%= @lead.status %></p>

<h3>Conversaciones</h3>
<%= form_with model: [@lead, @conversations], local: true do |form| %>
  <div class="form-group">
    <%= form.label :contenido, "Añadir conversación" %>
    <%= form.text_area :contenido, rows: 5, class: "form-control" %>
  </div>
  <%= form.submit "Subir información", class: "btn btn-primary" %>
<% end %>

<ul>
  <% @conversations.each do |conversation| %>
    <li><%= conversation.content %> <%= conversation.date.strftime('%d-%m-%Y %H:%M') %></li>
  <% end %>
</ul>
