<h1>Nuevo Prospecto</h1>

<%= form_with(model: @lead) do |form| %>
  <div class="form-group">
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email, 'Email' %>
    <%= form.email_field :email, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :phone, "TelÃ©fono" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

<div class="form-group">
    <%= form.label :status, "Estado" %>
    <%= form.select :status, [['Prospecto', 'prospect'], ['Interesado', 'interested'], ['Cliente', 'client']], {}, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= form.label :add_by, 'Ingresado por' %>
    <%= form.text_field :add_by, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= form.submit "Crear", class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to "Volver", leads_path, class: 'btn btn-secondary' %>
